# NexusHub MCP Server Environment Variables

# Server Configuration
PORT=8001
NODE_ENV=development # production, development, test
LOG_LEVEL=debug # debug, info, warn, error

# Database Configuration
DATABASE_PATH=./data/nexushub.db

# Vector Store Configuration
DEFAULT_DOCS_SOURCE_DIR=docs
VECTOR_DB_PATH=./persistent_data/chroma_db

# API Keys (required for connected services)
BRAVE_API_KEY=your_brave_api_key_here
GITHUB_TOKEN=your_github_personal_access_token_here
SERPER_API_KEY=your_serper_api_key_here

# Security Settings
SESSION_SECRET=change_this_to_a_secure_random_string
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_DOCKER_TOOLS=true

# Path Settings
SECURE_FILES_BASE_PATH=./data/shared_fs
ALLOWED_FILE_TYPES=.md,.pdf,.txt,.docx,.html,.csv,.json